<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="io.mindjet.litereader.viewmodel.item.DoubanReviewItemViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_gap_small"
        android:layout_marginRight="@dimen/common_gap_small"
        android:layout_marginTop="@dimen/common_gap_small"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/common_gap_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/douban_movie_detail_review_avatar_width"
                    android:layout_height="@dimen/douban_movie_detail_review_avatar_height"
                    android:scaleType="centerCrop"
                    app:circle="@{data.review.author.avatar}" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_gap_medium"
                    android:layout_weight="1"
                    android:text="@{data.review.author.name}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_gap_medium"
                    android:drawableLeft="@drawable/ic_star_gray"
                    android:drawablePadding="@dimen/common_gap_small"
                    android:text="@{data.review.usefulCount}"
                    android:textSize="@dimen/common_text_size_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_gap_medium"
                    android:drawableLeft="@drawable/ic_star_gray"
                    android:drawablePadding="@dimen/common_gap_small"
                    android:text="@{data.review.uselessCount}"
                    android:textSize="@dimen/common_text_size_small" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_gap_small"
                android:singleLine="true"
                android:text="@{data.review.title}"
                android:textColor="@color/article_text_color"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_gap_small"
                android:text="@{data.review.summary}"
                android:textSize="@dimen/common_text_size_small" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>